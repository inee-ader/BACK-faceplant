<p id="notice"><%= notice %></p>

<h1>User Plants</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>User fav</th>
      <th>Monograph</th>
      <th>Common name</th>
      <th>Plant name</th>
      <th>Image url</th>
      <th>Personality</th>
      <th>Insight</th>
      <th>Story notes</th>
      <th>Difficulty</th>
      <th>Sunlight</th>
      <th>Moisture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_plants.each do |user_plant| %>
      <tr>
        <td><%= user_plant.user_id %></td>
        <td><%= user_plant.user_fav %></td>
        <td><%= user_plant.monograph_id %></td>
        <td><%= user_plant.common_name %></td>
        <td><%= user_plant.plant_name %></td>
        <td><%= user_plant.image_url %></td>
        <td><%= user_plant.personality %></td>
        <td><%= user_plant.insight %></td>
        <td><%= user_plant.story_notes %></td>
        <td><%= user_plant.difficulty %></td>
        <td><%= user_plant.sunlight %></td>
        <td><%= user_plant.moisture %></td>
        <td><%= link_to 'Show', user_plant %></td>
        <td><%= link_to 'Edit', edit_user_plant_path(user_plant) %></td>
        <td><%= link_to 'Destroy', user_plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

